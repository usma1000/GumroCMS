<%= image_tag("GnA_Logo.png", size: "150x150", class: "center-block", alt: "Gumro and Associates Logo" )%>
<h1 class="text-center">Gumro &amp; Associates</h1>
<h3 class="text-center">Carrier Management System</h3>

<% if user_signed_in? %>
  <%= render 'buttonpanels' %>
<% else %>
  <br><p class="lead text-center">Please
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-success' %> or
    <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary' %>
    to proceed.</p>
<% end %>

<% if current_user.try(:admin?) %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'messagewall' %>
    </div>
  </div>
<% end %>
