<%= form_for @carrier, html: { multipart: true } do |f| %>
  <% if @carrier.errors.any? %>


    <div class="alert alert-danger alert-dismissible" id="error_explanation" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(@carrier.errors.count, "error") %> prevented your form from being sent:</strong>
      <ul>
        <% @carrier.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Name</h3>
    </div>
    <div class="panel-body">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Experience In</h3>
    </div>
    <div class="panel-body">
      <div class="field">
        <%= f.check_box :exp_in_retail %> <strong>Retail</strong>
      </div>
      <div class="field">
        <%= f.check_box :exp_in_intl_cargo %> <strong>Receiving International Cargo</strong>
      </div>
      <div class="field">
        <%= f.check_box :exp_in_garments_on_hangars %> <strong>Receiving of Garments on Hangers</strong>
      </div>
      <div class="field">
        <%= f.check_box :exp_in_noncommercial_goods %> <strong>Receiving of Non-Commercial Goods</strong>
      </div>
      <div class="field">
        <%= f.check_box :exp_in_replenishment %> <strong>Allocation to Stores or Warehouses' Replenishment Section</strong>
      </div>
      <div class="field">
        <%= f.check_box :exp_in_shop_returns %> <strong>Handling of Shop Returns</strong>
      </div>
      <div class="field">
        <%= f.check_box :sort_and_segregate %> <strong>Sort and Segregate</strong>
      </div>
      <div class="field">
        <%= f.check_box :pool_distribution %> <strong>Pool Distribution</strong>
      </div>
      <div class="field">
        <%= f.check_box :participate_in_recycling_programs %> <strong>Participate in Recycling Programs</strong>
      </div>
      <div class="field">
        <%= f.check_box :scanning %> <strong>Use Barcode Scanning</strong>
      </div>
      <div class="field">
        <%= f.label "If so, what software is used?" %><br>
        <%= f.text_field :scanning_software %>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">General Operations</h3>
    </div>
    <div class="panel-body">
      <div class="field">
        <%= f.check_box :two_year_contract %> <strong>Ability To Agree On A Two Year Contract</strong>
      </div>
      <div class="field">
        <%= f.check_box :operate_year_round %> <strong>Ability To Operate 7 Days A Week And On Bank Holidays</strong>
      </div>
      <div class="field">
        <%= f.check_box :handle_cosmetic_products %> <strong>Ability To Handle Cosmetic Products</strong>
      </div>
      <div class="field">
        <%= f.check_box :accept_payment_in_thirty_days %> <strong>Accept 30 Day Payment Terms</strong>
      </div>
    </div>
  </div>

<% if user_signed_in? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Attach Files</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :nda, 'Attach an NDA' %><br>
        <%= f.file_field :nda %>
      </div>
      <div class="form-group">
        <%= f.label :contract, 'Attach a Contract' %><br>
        <%= f.file_field :contract %>
      </div>
    </div>
  </div>
<% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Additional Info</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :comments %><br>
        <%= f.text_area :comments, :rows => "4", :class => 'form-control' %>
      </div>
    </div>
  </div>

  <p class="text-muted">This form contains proprietary information, trade secret information, copyrighted materials, or any combination thereof and will not be reproduced, published, used, or otherwise disseminated without your express written permission. The contents of this form are protectable under the Economic Espionage Act, 18 U.S.C. ยง1831 et seq., the Electronic Communications Privacy Act, 18 U.S.C. ยง2510 et seq., the Copyright Act, 17 U.S.C. ยง101 et seq., the Michigan Uniform Trade Secret Act ยง445.1901 et seq., as well as common law; applicable law provides criminal remedies, civil remedies, or both for the unauthorized reproduction, publication, use, or dissemination of the contents of this form or any attached files.  This form is intended solely for the use of the individual or entity addressed above; if you have received this form in error, please notify the sender.</p>

  <div class="actions">
    <%= f.submit 'Submit', :class => 'btn btn-primary' %>
  </div>
  <hr>
<% end %>
