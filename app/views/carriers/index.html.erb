<h1>Carriers</h1>

<div class="well" style="margin: 40px 0;">
  <div class="row">
    <div class="col-sm-4">
      <%= form_tag(carriers_path, :method => "get", id: "search-form", class: 'form-inline') do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Contacts", class: 'form-control' %>
        <%= submit_tag "Search", class: 'btn btn-default' %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= link_to 'New Carrier', new_carrier_path, class: 'btn btn-primary pull-right' %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Experience in Retail</th>
      <th>Comments</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= link_to carrier.name, carrier %></td>
        <td><%= boolean_yesno(carrier.exp_in_retail) %></td>
        <td><%= carrier.comments %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to edit_carrier_path(carrier), class: 'btn btn-default' do %>
              <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            <% end %>
            <%= link_to carrier, method: :delete, data: { confirm: 'Woah! Careful, buddy. You sure you wanna delete this carrier?' }, class: 'btn btn-danger' do %>
              <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
