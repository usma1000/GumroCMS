<h1>Carriers</h1>

<%= form_tag(carriers_path, :method => "get", id: "search-form", class: 'form-inline') do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Contacts", class: 'form-control' %>
  <%= submit_tag "Search", class: 'btn btn-default' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= link_to carrier.name, carrier %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Edit', edit_carrier_path(carrier), class: 'btn btn-default' %>
            <%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Woah! Careful, buddy. You sure you wanna delete this carrier?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carrier', new_carrier_path, class: 'btn btn-primary' %>
