<h1>Contacts</h1>

<div class="well" style="margin: 40px 0;">
  <div class="row">
    <div class="col-sm-4">
      <%= form_tag(contacts_path, :method => "get", id: "search-form", class: 'form-inline') do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Contacts", class: 'form-control' %>
        <%= submit_tag "Search", class: 'btn btn-default' %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <%= link_to 'New Contact', new_contact_path, class: 'btn btn-primary pull-right' %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Title</th>
      <th>Carrier</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.name, contact %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.title %></td>
        <td><%= contact.carrier.name %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-default' %>
            <%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Woah! Careful, buddy. You sure you wanna delete this carrier?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
