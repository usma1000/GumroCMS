<h1>Listing Facilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= link_to facility.address, facility %></td>
        <td><%= facility.city %></td>
        <td><%= facility.state %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to 'Edit', edit_facility_path(facility), class: 'btn btn-default' %>
            <%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Woah! Careful, buddy. You sure you wanna delete this facility?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility', new_facility_path, class: 'btn btn-primary' %>
